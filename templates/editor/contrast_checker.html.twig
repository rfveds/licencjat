<main class="container">
  <svg hidden style="display: none;" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <symbol id="pass" viewBox="0 0 24 24">
        <path d="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"/>
      </symbol>
      <symbol id="fail" viewBox="0 0 24 24">
        <path d="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12C4,13.85 4.63,15.55 5.68,16.91L16.91,5.68C15.55,4.63 13.85,4 12,4M12,20A8,8 0 0,0 20,12C20,10.15 19.37,8.45 18.32,7.09L7.09,18.32C8.45,19.37 10.15,20 12,20Z"/>
      </symbol>
      <symbol id="swap" viewBox="0 0 24 24">
        <path d="M9,3L5,7H8V14H10V7H13M16,17V10H14V17H11L15,21L19,17H16Z"/>
      </symbol>
      <symbol id="caution" viewBox="0 0 24 24">
        <path d="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z"/>
      </symbol>
    </defs>
  </svg>
  
  <header class="container__header header">
    <h1 class="header__text">Kontrast</h1>
  </header>

<form action="{{ url('project_colors_edit', {'id': project.id}) }}" method="GET" class="container">

  <section class="container__body">
    <div class="input input--container mb-0">
      <input type="text" id="foreground" placeholder="&nbsp;" name="foreground" value="{{ project.rgbToHex(project.lightShades) }}" spellcheck="false" class="input__input" js-foreground name="lightShades">
      <label for="foreground" class="input__label">Tekst:</label>
      <p class="input__error" js-foreground-err>Nieprawidłowy kolor</p>
      <input js-foreground-color-input class="input__color input__color--foreground" type="color" aria-hidden="true" name="lightShades">
    </div>
    <div class="input input--container mb-0">
      <input type="text" id="background" placeholder="&nbsp;" name="background" value="{{ project.rgbToHex(project.darkShades) }}" spellcheck="false" class="input__input" js-background name="darkShades">
      <label for="background" class="input__label">Tło:</label>
      <p class="input__error" js-background-err>Nieprawidłowy kolor</p>
      <input js-background-color-input class="input__color input__color--background" type="color" aria-hidden="true" name="darkShades">
    </div>
    <div style="display:none;">
        <div class="input input__form--container">
            <p class="input__form__label">{{ project.rgbToHex(project.lightAccent) }}</p>
            <input class="input__form__color input__input input__input__color" type="color" value="{{ project.rgbToHex(project.lightAccent) }}" name="lightAccent"></input>
        </div>
        <div class="input input__form--container">
            <p class="input__form__label">{{ project.rgbToHex(project.baseColor) }}</p>
            <input class="input__form__color input__input input__input__color" type="color" value="{{ project.rgbToHex(project.baseColor) }}" name="baseColor"></input>
        </div>
        <div class="input input__form--container">
            <p class="input__form__label">{{ project.rgbToHex(project.darkAccent) }}</p>
            <input class="input__form__color input__input input__input__color" type="color" value="{{ project.rgbToHex(project.darkAccent) }}" name="darkAccent"></input>
        </div >
    </div>
    <input class="mt-1 mb-2" type="submit" value="Zapisz">
  </section>
  
  </form>   

  <section class="container__body wcag wcag--container">
    <p class="wcag__ratio">
      Poziom kontrastu: 
      <output id="output" js-output>4.9</output>
    </p>
    <p class="wcag__level wcag__level--aa-large">
      <span class="wcag__level-icon wcag__level-icon--pass" js-aa-large="pass"><svg role="img" aria-label="pass"><use xlink:href="#pass"></use></svg></span>
      <span class="wcag__level-icon wcag__level-icon--fail" js-aa-large="fail"><svg role="img" aria-label="fail"><use xlink:href="#fail"></use></svg></span>
      <span class="wcag__level-text">AA&nbsp; Duży tekst (3:1)</span>
    </p>
    <p class="wcag__level wcag__level--aa-small">
      <span class="wcag__level-icon wcag__level-icon--pass" js-aa-small="pass" aria-label="passes"><svg role="img" aria-label="pass"><use xlink:href="#pass"></use></svg></span>
      <span class="wcag__level-icon wcag__level-icon--fail" js-aa-small="fail" aria-label="fails"><svg role="img" aria-label="fail"><use xlink:href="#fail"></use></svg></span>
      <span class="wcag__level-text">AA&nbsp; Zwykły tekst (4.5:1)</span>
    </p>
    <p class="wcag__level wcag__level--aaa-large">
      <span class="wcag__level-icon wcag__level-icon--pass" js-aaa-large="pass" aria-label="passes"><svg role="img" aria-label="pass"><use xlink:href="#pass"></use></svg></span>
      <span class="wcag__level-icon wcag__level-icon--fail" js-aaa-large="fail" aria-label="fails"><svg role="img" aria-label="fail"><use xlink:href="#fail"></use></svg></span>
      <span class="wcag__level-text">AAA Duży tekst (4.5:1)</span>
    </p>
    <p class="wcag__level wcag__level--aaa-small">
      <span class="wcag__level-icon wcag__level-icon--pass" js-aaa-small="pass" aria-label="passes"><svg role="img" aria-label="pass"><use xlink:href="#pass"></use></svg></span>
      <span class="wcag__level-icon wcag__level-icon--fail" js-aaa-small="fail" aria-label="fails"><svg role="img" aria-label="fail"><use xlink:href="#fail"></use></svg></span>
      <span class="wcag__level-text">AAA Zwykły tekst (7:1)</span>
    </p>
  </section>

</main>