{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="container">
		<div class="row">
			<div class="col-md-4 mt-5 offset-md-4">
				<form
					action="{{ path('app_login') }}" method="post">

					<!-- Email input -->
					<div class="form-outline mb-4">
						<label class="form-label" for="username">Email:</label>
						<input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}"/>
					</div>

					<!-- Password input -->
					<div class="form-outline mb-4">
						<label class="form-label" for="password">Has≈Ço:</label>
						<input type="password" id="password" name="_password" class="form-control"/>
					</div>

					{# If you want to control the URL the user is redirected to on success
																			<input type="hidden" name="_target_path" value="/account"/> #}

					<button type="button" class="btn btn-primary btn-block mb-4">Zaloguj</button>
				</form>
			</div>

		</div>

	</div>

{% endblock %}
