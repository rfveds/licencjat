{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<header>
		{% include 'default/_navbar.html.twig' %}
	</header>

	<h1>Register</h1>

	<div class="container">
		<div class="row">
			<div class="col-md-4 mt-5 offset-md-4">
				<form
					action="{{ path('app_register') }}" method="post">

					<!-- Email input -->
					<div class="form-outline mb-4">
						<label class="form-label" for="username">Email:</label>
						<input class="form-control" type="email" id="username" name="_username"/>
					</div>

					<!-- Password input -->
					<div class="form-outline mb-4">
						<label class="form-label" for="password">Has≈Ço:</label>
						<input type="password" id="password" name="_password" class="form-control"/>
					</div>

					<button type="button" class="btn btn-primary btn-block mb-4">Zarejestruj</button>
				</form>
			</div>

		</div>

	</div>

{% endblock %}
